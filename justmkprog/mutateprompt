#!/bin/bash

# Read the current prompt
current_prompt=$(cat prompt)

# Read the prompt suggestion
prompt_suggestion=$(cat prompt-suggestion.txt)

# Combine the current prompt and the suggestion

# start output:
echo "<prompt>$current_prompt</prompt>

Consider the following suggestion for improvement:
<suggestions>
$prompt_suggestion
</suggestions>

Please incorporate these suggestions while maintaining the core functionality and purpose of the program." \
  | cgpt -s 'output a new <prompt> with the applied suggestions, the output must begin with "mkprog mkprog \""' -p "mkprog" > prompt
